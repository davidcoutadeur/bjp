<form name="basicform" id="basicform" method="post" action="/bjp/">
 
  <div id="sf1" class="frm">
    <fieldset>
      <legend>Etape 1 de 4</legend>

      <div class="form-group">
        <label class="col-md-1 control-label" for="uname">Identifiant : </label>
        <div class="col-md-4">
          <input type="text" placeholder="uid" id="uuid" name="uuid" class="form-control" autocomplete="off" value="<% uid %>">
        </div>
      </div>
      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="uname">Vous : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Prénom Nom" id="uname" name="uname" class="form-control" autocomplete="off">
        </div>
      </div>
      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="umanager">Votre manager : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Prénom Nom" id="umanager" name="umanager" class="form-control" autocomplete="off">
        </div>
      </div>
      <div class="clearfix" style="height: 10px;clear: both;"></div>


      <div class="form-group">
        <div class="col-md-4 col-md-offset-1">
          <button class="btn btn-primary open1" type="button">Next <span class="fa fa-arrow-right"></span></button> 
        </div>
      </div>

    </fieldset>
  </div>

  <div id="sf2" class="frm" style="display: none;">
    <fieldset>
      <legend>Etape 2 de 4</legend>


      <div class="form-group">
        <label class="col-md-1 control-label" for="cname">Nom du client : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Nom du client" id="cname" name="cname" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="ccontactname">Nom du contact chez le client : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Nom du contact" id="ccontactname" name="ccontactname" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="ccontacttel">Téléphone du contact : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Téléphone du contact" id="ccontacttel" name="ccontacttel" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="ccontactaddress">Adresse du client : </label>
        <div class="col-md-4">
          <textarea cols="50" rows="2" placeholder="Adresse d'intervention chez le client" id="ccontactaddress" name="ccontactaddress" class="form-control" autocomplete="off"></textarea>
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>



      <div class="form-group">
        <div class="col-md-4 col-md-offset-1">
          <button class="btn btn-warning back2" type="button"><span class="fa fa-arrow-left"></span> Back</button> 
          <button class="btn btn-primary open2" type="button">Next <span class="fa fa-arrow-right"></span></button> 
        </div>
      </div>

    </fieldset>
  </div>

  <div id="sf3" class="frm" style="display: none;">
    <fieldset>
      <legend>Etape 3 de 4</legend>

      <div class="form-group">
        <label class="col-md-1 control-label" for="missionname">Intitulé de la prestation : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Intitulé de la prestation" id="missionname" name="missionname" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="missioncode">Référence contractuelle : </label>
        <div class="col-md-4">
          <input type="text" placeholder="bon de commande : XXXXXXX / interne : XXXXX-XX" id="missioncode" name="missioncode" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="missionnature">Nature de la mission : </label>
        <div class="col-md-4">
          <input type="text" placeholder="Nature de la mission" id="missionnature" name="missionnature" class="form-control" autocomplete="off">
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <div class="col-md-4 col-md-offset-1">
          <button class="btn btn-warning back3" type="button"><span class="fa fa-arrow-left"></span> Back</button> 
          <button class="btn btn-primary open3" type="button">Next <span class="fa fa-arrow-right"></span></button> 
        </div>
      </div>


    </fieldset>
  </div> 

  <div id="sf4" class="frm" style="display: none;">
    <fieldset>
      <legend>Etape 4 sur 4</legend>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <label class="col-md-1 control-label" for="choosecalendar">Choisissez le mois, puis les jours de mission dans ce mois : </label>
        <div class="col-md-4">
          <input type="hidden" placeholder="" id="output-half" name="output-half" class="form-control" autocomplete="off" />
          <div id='datepickr-half'></div>
        </div>
      </div>

      <div class="clearfix" style="height: 10px;clear: both;"></div>

      <div class="form-group">
        <div class="col-md-4 col-md-offset-1">
          <button class="btn btn-warning back4" type="button"><span class="fa fa-arrow-left"></span> Back</button> 
          <button class="btn btn-primary open4" type="button">Submit </button> 
        </div>
      </div>


    </fieldset>
  </div> 

</form>
